<p id="notice"><%= notice %></p>

<h1>プロジェクト</h1>

<table>
  <thead>
    <tr>
      <th>プロジェクト名</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do | project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.explanation %></td>
        <td><%= link_to 'もっと詳しく', project %></td>
        <td><%= link_to '編集', edit_project_path(project) %></td>
        <td><%= link_to '削除', project, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '作成', new_project_path %>
